<project
	xmlns="http://maven.apache.org/xsd/decoration-1.8.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/xsd/decoration-1.8.0 http://maven.apache.org/xsd/decoration-1.8.0.xsd"
	name="bndly applications"
>

	<bannerLeft>
		<!-- Reflow Maven Skin, but with "Reflow" highlighted -->
		<name>bndly applications</name>
		<href>index.html</href>
	</bannerLeft>

	<skin>
		<groupId>org.apache.maven.skins</groupId>
		<artifactId>maven-fluido-skin</artifactId>
		<version>1.8</version>
	</skin>

	<custom>
		<reflowSkin>
			<theme>site</theme>
			<highlightJs>true</highlightJs>
			<brand>
				<name>bndly applications</name>
			</brand>
			<slogan>Bill of materials</slogan>
			<titleTemplate>%2$s | %1$s</titleTemplate>
			<toc>top</toc>
			<topNav>reports|Main</topNav>
			<bottomNav maxSpan="12">
				<column>reports|modules</column>
			</bottomNav>
		</reflowSkin>
	</custom>
	
	<body>
		<links>
			<item name="Git" href="https://github.com/bndly/bndly-commons.git" />
		</links>
		
		<menu ref="modules" inherit="bottom" />
		<menu ref="reports" inherit="bottom" />
		
	</body>
</project>
